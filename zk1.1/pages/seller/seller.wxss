/* pages/seller/seller.wxss */

.foot {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 88rpx;
  width: 100%;
  background: #333;
  color: #fff;
}

.li {
  display: flex;
  height: 300rpx;
  width: 100%;
}

.li image {
  margin: 20rpx;
  height: 200rpx;
  width: 200rpx;
}

.li text {
  display: block;
  height: 75rpx;
  line-height: 75rpx;
}

.btn {
  margin-right: 50rpx;
  flex: 1;
  text-align: right;
}

.foot>text {
  display: inline-block;
  margin-top: 10rpx;
  width: 200rpx;
  height: 66rpx;
  text-align: center;
  line-height: 20rpx;
  border-radius: 60rpx;
  background: orange;
}
